{{# each products }}

<div class="row">

    {{# each this }}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{ this.imagePath }}" alt="FIFA 19" class="img-responsive">
            <div class="caption">
            <h3 class="game-name"> {{ this.title }} </h3>
            <p class="description">{{ this.description }} </p>
            <div class="clearfix">
                <div class="price pull-left">R${{ this.price }}</div>
                <a href="/add-to-cart/{{this._id}}" class="btn btn-primary" role="button">Add to Shopping Cart</a>
            </div>
        </div>
    </div>
</div>
{{/each}}

</div>

{{/each}}